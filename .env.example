# GramSetu Environment Configuration
# Copy this file to .env and fill in your actual credentials

# ============================================
# AWS Configuration (Member 2 & 3)
# ============================================
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# AWS Bedrock Agent (Member 2)
BEDROCK_AGENT_ID=your_agent_id_here
BEDROCK_AGENT_ALIAS_ID=your_alias_id_here
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0

# AWS Textract (Member 3)
TEXTRACT_ROLE_ARN=your_textract_role_arn

# ============================================
# Bhashini API (Member 1)
# ============================================
BHASHINI_API_KEY=your_bhashini_api_key_here
BHASHINI_USER_ID=your_user_id_here
BHASHINI_PIPELINE_ID=your_pipeline_id_here
BHASHINI_BASE_URL=https://meity-auth.ulcacontrib.org

# Sarvam AI (Fallback ASR)
SARVAM_API_KEY=your_sarvam_api_key_here

# ============================================
# LLM Configuration (Intent Classification)
# ============================================
# Option 1: Use AWS Bedrock
USE_BEDROCK_LLM=true
BEDROCK_LLM_MODEL=anthropic.claude-3-haiku-20240307-v1:0

# Option 2: Use OpenAI (Fallback)
OPENAI_API_KEY=your_openai_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# ============================================
# WhatsApp Business API (Member 4)
# ============================================
# Option 1: Twilio
TWILIO_ACCOUNT_SID=your_twilio_sid_here
TWILIO_AUTH_TOKEN=your_twilio_token_here
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Option 2: Meta WhatsApp Business
META_WHATSAPP_TOKEN=your_meta_token_here
META_WHATSAPP_PHONE_ID=your_phone_id_here
META_VERIFY_TOKEN=your_verify_token_here

# ============================================
# Database Configuration (Member 4)
# ============================================
# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=gramsetu
POSTGRES_USER=gramsetu_user
POSTGRES_PASSWORD=your_secure_password_here

# Redis (Job Queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# ============================================
# Application Configuration
# ============================================
# Environment
ENVIRONMENT=development  # development, staging, production

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Security
SECRET_KEY=your_secret_key_for_jwt_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:19006

# ============================================
# Storage Configuration
# ============================================
# S3 Bucket for temporary file storage
S3_BUCKET_NAME=gramsetu-temp-storage
S3_LIFECYCLE_DAYS=1  # Auto-delete after 24 hours (DPDP compliance)

# Local storage (development)
LOCAL_STORAGE_PATH=./storage
UPLOAD_MAX_SIZE_MB=10

# ============================================
# Privacy & Compliance (Member 3)
# ============================================
# Data retention
DATA_RETENTION_HOURS=24
AUDIT_LOG_RETENTION_DAYS=90

# Aadhaar masking
AADHAAR_MASK_DIGITS=8  # Mask first 8 digits
PII_DETECTION_THRESHOLD=0.8

# ============================================
# Browser Agent Configuration (Member 2)
# ============================================
# Playwright
HEADLESS_BROWSER=true
BROWSER_TIMEOUT_MS=30000
SCREENSHOT_QUALITY=80

# Session management
SESSION_TIMEOUT_MINUTES=5
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=2

# CAPTCHA solving
CAPTCHA_MAX_ATTEMPTS=3
CAPTCHA_CONFIDENCE_THRESHOLD=0.7

# ============================================
# Voice Processing (Member 1)
# ============================================
# Audio settings
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_FORMAT=wav

# VAD (Voice Activity Detection)
VAD_THRESHOLD=0.5
VAD_MIN_SPEECH_DURATION_MS=250

# Noise suppression
ENABLE_NOISE_SUPPRESSION=true

# ============================================
# Mobile App Configuration (Member 4)
# ============================================
# API endpoints
MOBILE_API_BASE_URL=http://localhost:8000
MOBILE_WEBSOCKET_URL=ws://localhost:8000/ws

# Offline sync
SYNC_INTERVAL_MINUTES=5
MAX_OFFLINE_JOBS=50

# ============================================
# Monitoring & Logging
# ============================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json, text

# Sentry (Error tracking)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# ============================================
# Feature Flags
# ============================================
ENABLE_VOICE_BIOMETRICS=false
ENABLE_VIDEO_KYC=false
ENABLE_MOCK_PORTALS=true  # Use mock servers for testing
ENABLE_WIZARD_OF_OZ=false  # Fallback for demo

# ============================================
# Hackathon Specific
# ============================================
DEMO_MODE=true
DEMO_VLE_ID=VLE001
DEMO_CITIZEN_PHONE=+919876543210
